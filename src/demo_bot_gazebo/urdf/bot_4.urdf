<?xml version="1.0" ?>

<robot name="demo_bot" xmlns:xacro="https://www.ros.org/wiki/xacro" >

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>


    <!-- base_link -->
    <link name="base_link">
        <pose> 0 0 0 0 0 0 </pose>
        <visual>
            <origin xyz= "0 0 0" rpy= "0 0 0" />
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz= "0 0 0" rpy= "0 0 0" />
            <geometry>
                <box size="0.4 0.4 0.2"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1" />
            <inertia  ixx="0.016666667" ixy="0.00"  ixz="0.00" iyy="0.016666667" iyz="0.00" izz="0.026666667" />
        </inertial>

        <!-- caster -->
        <visual name="caster">
            <origin xyz="0.15 0 -0.1" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
        </visual>
        <!-- caster collision and inertia-->
        <collision>
            <origin xyz="0.15 0 -0.1" />
            <geometry>
                <sphere radius="0.02" />
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.00008" ixy="0.00"  ixz="0.00" iyy="0.00008" iyz="0.00" izz="0.00008" />
        </inertial>
    </link>

    <!-- right wheel -->
    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy= "1.570796327 0 0" />
            <geometry>
                <cylinder length="0.025" radius="0.12" />
            </geometry>
            <material name="white" />
        </visual>

        <!-- collision and inertia -->
        <collison>
            <origin xyz="0 0 0" rpy= "1.570796327 0 0" />
            <geometry>
                <cylinder length="0.025" radius="0.12" />
            </geometry>
        </collison>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0" rpy= "1.570796327 0 0" />
            <inertia ixx="0.001826042" ixy="0.0" ixz="0.0" iyy="0.001826042" iyz="0.0" izz="0.0036"/>
        </inertial>
    </link>

    <!-- joint right wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.2125 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- left wheel -->
    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy= "1.570796327 0 0" />
            <geometry>
                <cylinder length="0.025" radius="0.12" />
            </geometry>
            <material name="white" />
        </visual>

        <!-- collision and inertia -->
        <collison>
            <origin xyz="0 0 0" rpy= "1.570796327 0 0" />
            <geometry>
                <cylinder length="0.025" radius="0.12" />
            </geometry>
        </collison>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0" rpy= "1.570796327 0 0" />
            <inertia ixx="0.001826042" ixy="0.0" ixz="0.0" iyy="0.001826042" iyz="0.0" izz="0.0036"/>
        </inertial>
    </link>

    <!-- joint right wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.2125 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    
    <gazebo reference="base_link">
        <material> Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material> Gazebo/Red</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material> Gazebo/Red</material>
    </gazebo>
        
    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <alwaysOn>false</alwaysOn>
            <legacyMode>false</legacyMode>
            <updateRate>40</updateRate>
            <leftJoint>right_wheel_joint</leftJoint>
            <rightJoint>left_wheel_joint</rightJoint>
            <wheelSeparation>0.5</wheelSeparation>
            <wheelDiameter>0.48</wheelDiameter>
            <torque>80</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>
</robot>
